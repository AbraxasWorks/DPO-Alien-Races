<Patch>

	<!--=== Kijin pawns are special ===-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Kijin Race 2.0</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName = "Alien_Kijin"]/race</xpath>
					<value>
						<baseHealthScale>1.3</baseHealthScale>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Kijin Race</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName = "KIJIN_Race"]/race</xpath>
					<value>
						<baseHealthScale>1.3</baseHealthScale>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>
