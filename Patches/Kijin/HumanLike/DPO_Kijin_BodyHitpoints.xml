<Patch>

	<!--=== Kijin pawns are now tougher to kill ===-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Kijin Race</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
			<!--Race Unique Parts-->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BodyPartDef[defName="KIJIN_Horn"]/hitPoints</xpath>
					<value>
						<hitPoints>55</hitPoints>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>
